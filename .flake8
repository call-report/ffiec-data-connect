[flake8]
max-line-length = 120
extend-ignore = 
    E203,
    W503,
    E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    .tox,
    htmlcov,
    dev
per-file-ignores =
    __init__.py:F401
    tests/*.py:F401,F811,F841,W291
    tests/mocks/*.py:F401,F811,F841,F541,W291